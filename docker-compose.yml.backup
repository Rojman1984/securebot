version: '3.8'
services:
  vault:
    build:
      context: .
      dockerfile: vault/Dockerfile
    container_name: vault
    user: "1000:1000"
    environment:
      - VAULT_PASSWORD=${VAULT_PASSWORD:-change-me-in-production}
    volumes:
      - ./vault/secrets:/vault
    networks:
      - securebot
    restart: unless-stopped
    ports:
      - "8200:8200"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8200/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  gateway:
    build:
      context: .
      dockerfile: gateway/Dockerfile
    container_name: gateway
    user: "1000:1000"
    environment:
      - VAULT_URL=http://vault:8200
      - OLLAMA_HOST=http://host.docker.internal:11434
      - OLLAMA_MODEL=phi4-mini:3.8b
      - MEMORY_SERVICE_URL=http://memory-service:8300
      - RAG_URL=http://rag-service:8400
    volumes:
      - /home/tasker0/securebot/skills:/home/tasker0/securebot/skills
    networks:
      - securebot
    ports:
      - "8080:8080"
    depends_on:
      - vault
      - memory-service
      - rag-service
    restart: unless-stopped
    extra_hosts:
      - "host.docker.internal:host-gateway"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  memory-service:
    build:
      context: ./services/memory
      dockerfile: Dockerfile
    container_name: memory-service
    user: "1000:1000"
    environment:
      - MEMORY_DIR=/memory
      - RAG_URL=http://rag-service:8400
    volumes:
      - ./memory:/memory
    networks:
      - securebot
    ports:
      - "8300:8300"
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8300/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  rag-service:
    build:
      context: .
      dockerfile: services/rag/Dockerfile
    container_name: rag-service
    user: "1000:1000"
    environment:
      - OLLAMA_HOST=http://host.docker.internal:11434
      - MEMORY_DIR=/memory
      - CHROMA_DIR=/chroma
    volumes:
      - ./memory:/memory
      - ./chroma:/chroma
    networks:
      - securebot
    ports:
      - "8400:8400"
    restart: unless-stopped
    extra_hosts:
      - "host.docker.internal:host-gateway"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8400/health"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  securebot:
    driver: bridge
